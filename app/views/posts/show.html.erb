
<h1 id="page-title"><%= @post.title %></h1>
<p class="meta">
  Posted by: <a href='#'><%= @post.user.name %></a> On <%= l @post.created_at %>
</p>
<div id="post-body">
  <%= @post.body %>
</div>


<div id="span6">
<% if user_signed_in? && @post.user == current_user %>

	 <%= link_to t('.destroy', :default => t("helpers.links.destroy")), @post, :method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
	
	|
 <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn btn-mini' %>
<% end %>

</div>