

<%= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
 
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => "50" %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 290, :rows => 10%>
  </div>
  
 <div class="form-actions">
	
		
			
			 <%= link_to t('.destroy', :default => t("helpers.links.destroy")), @post, :method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
			
			|
		
		
    <%= f.button :submit, :class => 'btn-primary' %> |
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
