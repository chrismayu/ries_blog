<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div id="left-content">
  <ul id="blog-list">
    <% @posts.each do |post| %>
    <li>
      <span class="post-date"><%= l(post.created_at, :format => :short) %></span>
      <h2 class="post-title"><%= link_to post.title, post %></h2>
      <h4 class="author">By <%= post.user.username%></h4>
      <div class="post-body">
        <%= post.body %>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
